# PAMSI

#include<iostream>

using namespace std;

int main()
{
  int n=5;
  int *tab=new int[n];
  int *tab_pom=new int[n];
  int liczba;
  for(int i=0;i<n;i++)
    {
      tab[i]=i;
    }
  for(int i=0;i<n;i++)
    {
      cout<<tab[i]<<endl;
    }
  while(liczba!=32)
    {
      cout<<"Podaj liczbe do zapisania: ";
      cin>>liczba;
      for(int i=0;i<n;i++)
	{
	  tab_pom[i]=tab[i];
	}
      n++;
      delete [] tab;
      int *tab=new int[n];
      for(int i=0;i<n;i++)
	{
	  tab[i]=tab_pom[i];
	}
      tab[n-1]=liczba;
      delete [] tab_pom;
      int *tab_pom=new int[n];
    }
  for(int i=0;i<n;i++)
    cout<<tab[i]<<endl;
  delete [] tab;
}
