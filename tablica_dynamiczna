#include<iostream>

using namespace std;

int main()
{
  int n=5;
  int *tab=new int[n];
  int liczba;
  int licznik=0;

  while(liczba!=32)
    {
      if(licznik<n)
	{
	  cout<<"Podaj liczbe: ";
	  cin>>liczba;
	  if(liczba==32) break;
	  tab[licznik]=liczba;
	  licznik++;
	}
      else
	{
	  int *tab_pom=new int[n];
	  n++;
	  cout<<n<<endl;
	  for(int i=0;i<licznik;i++)
	    tab_pom[i]=tab[i];
	  delete [] tab;
	  int *tab=new int[n];
	  for(int i=0;i<licznik;i++)
	    tab[i]=tab_pom[i];
	  for(int i=0;i<licznik;i++)
	    cout<<tab_pom[i]<<endl;
	  delete [] tab_pom;
	}
    }
  for(int i=0;i<licznik;i++)
    cout<<tab[i]<<endl;
}
